<div class="row">
	<div v-for="card in cards" class="col-12 col-md-4 col-lg-3 mb-4">
		<a v-bind:href="card.shortUrl" class="card h-100" target="_blank">
			<div class="card-body h-100">
				<div class="d-flex flex-column justify-content-between h-100">
					<div class="main">
						<p class="mt-0 mb-2 board-name">{{ getBoardName(card.idBoard) }}</p>
						<h3 class="card-title h6 mb-1"><strong>{{ card.name }}</strong></h3>
						<div class="text-left">
							<small v-html="showDue(card.due, card.dueComplete)"></small>
						</div>
						<p class="card-text text-muted">
							<small>{{ card.desc }}</small>
						</p>
					</div>
					<div class="trello-labels mt-2">
						<div class="d-inline-block" v-for="label in card.labels">
							<span v-bind:class="label.color" class="label-item">{{label.name}}</span>
						</div>
					</div>
				</div>
			</div>
		</a>
	</div>
</div>